.container{
  min-height:100%;
  background-color:rgb(42,45,79);
  /* padding-bottom: 100rpx; */
  box-sizing: border-box;
}
.market-header{
  width: 100%;
  height:100rpx;
}
.market-content{
  width: 100%;
  /* display:flex;
  flex-wrap: wrap; */
}
.market-tab{
  width: 94%;
  background-color:rgb(42,45,79);
  height:50rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  color:#ccc;
  font-size:30rpx;
  padding:0 20rpx;
}
.market-body{
  width: 100%;
  background-color:rgb(42,45,79);
  /* height:980rpx; */
}
.body-row{
  width: 95%;
  height:75rpx;
  display:flex;
  justify-content: space-between;
  align-items:center;
  font-size:30rpx;
  font-weight:400;
  color:#fff;
  background-color:rgb(30,58,101);
  border-radius:30rpx 0 0 30rpx;
  border-bottom:2rpx solid #000;
  padding:0 20rpx;
}
.body-row view{
  width: 22%;
  text-align: right;
}
.body-row .row-name{
  text-align: left;
  overflow: hidden;
}
.odd-row{
  background-color:rgb(42,45,79);
}
.juice-row{
  color:rgb(240,120,104)
}
.lime-row{
  color:rgb(61,180,106)
}

